<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_green_vertical"
    tools:context=".home.profile.SettingScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            style="@style/imageButton"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:stateListAnimator="@animator/image_button_animation"
            android:layout_margin="20dp"
            android:layout_gravity="left"
            android:id="@+id/backButton"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                style="@style/articleMenuTextView"
                android:text="Privacy Policy"
                android:id="@+id/privacyPolicyLinkButton"/>

            <View
                style="@style/line1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/logoutLinearLayout">

            <TextView
                style="@style/articleMenuTextView"
                android:text="Logout"
                android:textColor="@color/blue"
                android:id="@+id/logout"/>

            <View
                style="@style/line1"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/article_post_background"
        android:elevation="10dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic"
                android:text="Developed by "/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Naved Ansari"/>

        </LinearLayout>

        <android.widget.Button
            style="@style/textButtonBlue"
            android:text="navedansari.in"
            android:layout_gravity="center"
            android:id="@+id/website"/>

    </LinearLayout>

</RelativeLayout>